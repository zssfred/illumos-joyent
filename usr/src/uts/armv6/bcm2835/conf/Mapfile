$mapfile_version 2

# NB: Order matters for name-based entry!
LOAD_SEGMENT exception_vector {
	FLAGS = READ EXECUTE;
	NOHDR;
	PADDR = 0x0;
	VADDR = 0x0;
	OS_ORDER = .exception_vector;
	ASSIGN_SECTION { IS_NAME = .exception_vector };
};

LOAD_SEGMENT text {
	FLAGS = READ EXECUTE;
	NOHDR;
#	PADDR = 0x8080;
#	VADDR = 0x8080;
	PADDR = 0x0c100000;
	VADDR = 0x0c100000;
	OS_ORDER = .text;
	ASSIGN_SECTION {
		TYPE = PROGBITS;
		FLAGS = ALLOC !WRITE;
	};
};

LOAD_SEGMENT data {
	FLAGS = READ WRITE EXECUTE;
	NOHDR;
#	PADDR = 0x80000;
#	VADDR = 0x80000;
	PADDR = 0x0c200000;
	VADDR = 0x0c200000;
	OS_ORDER = .data;
	ASSIGN_SECTION {
		TYPE = PROGBITS;
		FLAGS = ALLOC  WRITE;
	};
};
